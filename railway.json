{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npm run dev",
    "restartPolicyType": "ON_FAILURE"
  },
  "source": {
    "watchPatterns": ["web/**"]
  },
  "rootDirectory": "web",
  "installCommand": "npm install"
}
