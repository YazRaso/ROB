{
  "name": "backboard-assistant",
  "displayName": "Backboard Onboarding Assistant",
  "description": "Chat with your onboarding assistant powered by Drive docs, Git history, and Telegram chats",
  "version": "0.1.0",
  "publisher": "backboard",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Chat"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "backboard.openChat",
        "title": "Open Backboard Chat",
        "category": "Backboard",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "backboard.askQuestion",
        "title": "Ask Backboard",
        "category": "Backboard",
        "icon": "$(question)"
      },
      {
        "command": "backboard.clearChat",
        "title": "Clear Chat History",
        "category": "Backboard"
      }
    ],
    "keybindings": [
      {
        "command": "backboard.openChat",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b"
      },
      {
        "command": "backboard.askQuestion",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "backboard-sidebar",
          "title": "Backboard Assistant",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "backboard-sidebar": [
        {
          "type": "webview",
          "id": "backboard.chatView",
          "name": "Chat"
        }
      ]
    },
    "configuration": {
      "title": "Backboard Assistant",
      "properties": {
        "backboard.apiUrl": {
          "type": "string",
          "default": "https://rob-production.up.railway.app",
          "description": "Backboard API server URL (production: https://rob-production.up.railway.app)"
        },
        "backboard.clientId": {
          "type": "string",
          "default": "ALEX",
          "description": "Your unique client ID"
        },
        "backboard.enableSourceLinks": {
          "type": "boolean",
          "default": true,
          "description": "Enable @source command to show source files"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
